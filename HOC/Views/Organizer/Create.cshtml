@model HOC.Models.cResearchProject
@{
    ViewData["Title"] = "Create a New Project";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--  jQuery -->
<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

<!-- Isolated Version of Bootstrap, not needed if your site already uses Bootstrap -->
<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />

<!-- Bootstrap Date-Picker Plugin -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />
<script src="~/js/Validate.js" type="text/javascript"></script>
<script>
    function Validate() {
        var projname = document.getElementById("ProjectName").value;

        //projname = trim(projname);
        if (projname == "") {
            alert("You must enter Project Name");
            return false;
        }
        
        var desc = document.getElementById("Description").value;

        if (desc == "") {
            alert("You must enter Description");
            return false;
        }

        var sdate = document.getElementById("StartDate").value;

        if (sdate == "") {
            alert("You must enter Start Date");
            return false;
        }

        var edate = document.getElementById("EndDate").value;

        if (edate == "") {
            alert("You must enter End Date");
            return false;
        }

        document.forms[0].submit();
        return true;
    }
</script>
<h2>Create a New Research Project</h2>
@using (Html.BeginForm("Create", "Organizer", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div id="divForm">
        <table id="tbContainer" style="width:100%">
            <tr>
                <td style="text-align:left; margin-left:20px">
                    <table class="datatable" style="border-width:3px">
                        <tr>
                            <td style="font-weight:bold;height:40px; padding-right:10px">Project Name: </td>
                            <td>
                                @Html.TextBox("ProjectName", "", new { @class = "regtext", @style = "width:400px" })
                                @Html.ValidationMessageFor(model => model.ProjectName)
                            </td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold; padding-bottom:20px">Description: </td>
                            <td>
                                @Html.TextArea("Description", new { @style = "width:400px;height:150px" })
                            </td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold; height:40px; ">Start Date: </td>
                            <td>
                                @Html.TextBox("StartDate", "", new { @class = "regtext", @style = "width:100px" })

                                <script type="text/javascript">
                                    $("#StartDate").datepicker();
                                </script>
                            </td>
                        </tr>
                        <tr>
                            <td style="font-weight:bold; height:40px;">End Date: </td>
                            <td>
                                @Html.TextBox("EndDate", "", new { @class = "regtext", @style = "width:100px" })
                                
                                <script type="text/javascript">
                                    $("#EndDate").datepicker();
                                </script>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td style="height:60px;">
                                <button type="button" class="btn btn-primary" value="Save" onclick="javascript: return Validate();">Save</button>
                                <button type="button" class="btn btn-secondary">Cancel</button>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>

        </table>

    </div>
}